# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.fish]
indent_style = space

# YAML requires spaces for indentation
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files often work better with spaces
[*.json]
indent_style = space
indent_size = 2

# Markdown files need special handling for trailing whitespace
[*.md]
trim_trailing_whitespace = false